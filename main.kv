#:kivy 1.0.9

<MDBoxLayout>:
    orientation: 'vertical'
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    spacing: 0.5
    
<MDChip>:
    line_color: app.theme_cls.disabled_hint_text_color

MDBoxLayout:
    MDBoxLayout:
        orientation: 'horizontal'
        MDTextField:
            id: lemma_field
            mode: 'rectangle'
            hint_text: 'testing'
        MDIconButton:
            icon: 'magnify'
            on_release: app.search()
    MDCard:
        MDRelativeLayout:
            MDIconButton:
                id: menu_button
                icon: "dots-vertical"
                pos_hint: {"top": 1, "right": 1}
                on_release: app.menu.open()
            DataCard:
                id: datacard